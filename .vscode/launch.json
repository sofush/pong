    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "type": "cortex-debug",
            "cwd": "${workspaceFolder}",
            "executable": "./target/thumbv7em-none-eabihf/debug/pong",
            "request": "launch",
            "runToEntryPoint": "pong::main",
            "servertype": "openocd",
            "device": "nRF52820_xxAA",
            "configFiles": [
                "interface/cmsis-dap.cfg",
                "target/nrf52.cfg"
            ],
            "preLaunchTask": "rust: cargo build"
        },
        {
            "name": "Cortex Remote Debug",
            "type": "cortex-debug",
            "cwd": "${workspaceRoot}",
            "executable": "./target/thumbv7em-none-eabihf/debug/pong",
            "request": "launch",
            "runToEntryPoint": "pong::main",
            "servertype": "external",
            "gdbPath": "gdb-multiarch",
            "loadFiles": [],
            "gdbTarget": "127.0.0.1:1337",
            "postRestartCommands": [
                "break pong::main",
                "continue"
            ]
        }
    ]
}
